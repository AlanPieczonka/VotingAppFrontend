<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
            <li class="nav-item">
                {{#link-to "index" class="nav-link"}}Home{{/link-to}}
            </li>
        {{#if session.isAuthenticated}}
            <li class="nav-item">
                <a class="nav-link">Settings</a>
            </li>
            <li class="nav-item">
                {{x-button/warning 'Log out' click=(action "invalidateSession")}}
            </li>
            {{#if currentUser}}
                <p>Signed in as {{currentUser.user.email}}</p>
                {{log currentUser.user.email}}
            {{/if}}
        {{else}}
            <li class="nav-item">
                {{#link-to "login" class="nav-link"}}Login{{/link-to}}
            </li>
            <li class="nav-item">
                {{#link-to "join" class="nav-link"}}Join{{/link-to}}
            </li>
            <li class="nav-item">
                {{#link-to "about" class="nav-link"}}About{{/link-to}}
            </li>
        {{/if}}
    </ul>
</div>