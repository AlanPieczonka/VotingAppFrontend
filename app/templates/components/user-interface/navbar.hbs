<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false"
    aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
</button>
<div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
        <li class="nav-item">
            {{#link-to "index" class="nav-link" }}Home{{/link-to}}
        </li>
        {{#if session.isAuthenticated}}
            <li class="nav-item">
                {{#link-to 'authenticated.user' currentUser.user class="nav-link" }}Settings{{/link-to}}
            </li>
            <li class="nav-item">
                {{x-button/warning 'Log out' click=(action "invalidateSession")}}
            </li>
            {{#if currentUser}}
             <li class="nav-item">
                <a class="nav-link">{{currentUser.user.email}}</a>
            </li>
            {{/if}}
        {{else}}
            {{user-interface/navbar/unauthenticated}}
        {{/if}}
    </ul>
</div>