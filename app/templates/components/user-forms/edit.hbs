<fieldset disabled={{isDisabled}}>
    <div class="form-group">
        <label for="emailInput">Email</label>
        {{input value=user.email class="form-control" placeholder="Your email"}}
    </div>
    <div class="form-group">
        <label for="nameInput">Name</label>
        {{input value=user.name class="form-control" placeholder="Name"}}
    </div>
    <div class="form-group">
        <label for="nicknameInput">Nickname</label>
        {{input value=user.nickname class="form-control" placeholder="Nickname"}}
    </div>
    <div class="form-group">
        <label for="linkToImageInput">Image</label>
        {{input value=user.image class="form-control" placeholder="Link to the profile picture"}}
    </div>
    <div style="width: 200px; height: 215px; margin-bottom: 15px; border: 5px solid black;">
        <img src={{user.image}} class="img-fluid">
    </div>
</fieldset>
{{yield}}