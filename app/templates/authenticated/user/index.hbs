<div class="container">
  <form>
    <fieldset disabled>
      <div class="form-group">
        <label for="disabledTextInput">Email</label>
        {{input value=model.email class="form-control" placeholder="Disabled input"}}
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Name</label>
        {{input value=model.name class="form-control" placeholder="Disabled input"}}
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Nickname</label>
        {{input value=model.nickname class="form-control" placeholder="Disabled input"}}
      </div>
      <div class="form-group">
        <label for="disabledTextInput">Image</label>
        {{input value=model.image class="form-control" placeholder="Disabled input"}}
      </div>
      <div style="width: 200px; height: 215px;">
        <img src={{model.image}} class="img-fluid">
      </div>
    </fieldset>
    {{#link-to 'authenticated.user.edit' model}}
      {{x-button/success 'Edit'}}
    {{/link-to}}
  </form>
</div>
{{outlet}}